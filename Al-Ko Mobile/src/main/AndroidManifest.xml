            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_acivity_main">
        </activity>
        <activity
            android:name=".DaysActivity"
            android:label="@string/title_activity_days" >
        </activity>
        <activity
