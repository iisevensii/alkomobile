<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.alko.mobile.SingleDayActivity$PlaceholderFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/payperiodIDLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PayPeriodID: "
                android:textSize="25sp"
                android:layout_alignParentTop="true" />
            <TextView
                android:id="@+id/payperiodIDValue"
                android:layout_toRightOf="@+id/payperiodIDLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown!"
                android:textSize="25sp"
                android:layout_alignParentTop="true" />
            <TextView
                android:id="@+id/timeInLabel"
                android:layout_below="@+id/payperiodIDLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Time In"
                android:textSize="25sp" />
            <TimePicker
                android:id="@+id/timeInTimePicker"
                android:layout_below="@+id/timeInLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/timeOutLabel"
                android:layout_below="@+id/timeInTimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Time Out"
                android:textSize="25sp" />
            <TimePicker
                android:id="@+id/timeOutTimePicker"
                android:layout_below="@+id/timeOutLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lunchMinutesLabel"
                android:layout_below="@+id/timeOutTimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time For Lunch"
                android:textSize="25sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
